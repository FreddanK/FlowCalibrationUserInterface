<Page x:Class="FlowCalibration.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlowCalibration"
      xmlns:oxy="http://oxyplot.org/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      Title="Page2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Data Control" FontSize="16" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Text="Plot window" FontSize="16" HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="1">
            <ComboBox Margin="20">
                <ComboBoxItem IsSelected="True">Sine</ComboBoxItem>
                <ComboBoxItem>Square</ComboBoxItem>
                <ComboBoxItem>Ramp</ComboBoxItem>
                <ComboBoxItem>Triangle</ComboBoxItem>
                <ComboBoxItem>Breathing</ComboBoxItem>
                <ComboBoxItem>Custom</ComboBoxItem>
            </ComboBox>
            <ListView Name="DataPointsListView" Margin="20" ItemsSource="{Binding Points}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Time" DisplayMemberBinding="{Binding X}" Width="80"/>
                        <GridViewColumn Header="Flow" DisplayMemberBinding="{Binding Y}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <Button x:Name="BackToStartPageButton" Grid.Row="2" Content="To Start" Click="BackToStartPageButton_Click"/>
        <oxy:Plot Grid.Column="1" Grid.Row="1" Title="{Binding PlotTitle}">
            <oxy:Plot.Series>
            <oxy:LineSeries ItemsSource="{Binding Points}"/>
            </oxy:Plot.Series>
        </oxy:Plot>
    </Grid>
</Page>
